{
  "name": "chatbot-puerperio",
  "private": true,
  "scripts": {
    "prepare": "husky || true",
    "test": "jest",
    "test:js": "jest --testPathPattern=tests/js",
    "check:js": "node scripts/check-js-syntax.js",
    "lint": "eslint . --ext .js --max-warnings 0",
    "test:e2e": "playwright test --reporter=line",
    "size": "size-limit",
    "docs:triage": "node scripts/triage-extraneous.js",
    "docs:archive": "node scripts/triage-extraneous.js --archive",
    "purge:plan": "node scripts/history-purge-plan.js",
    "purge:blobs": "bash scripts/list-large-blobs.sh",
    "purge:run": "bash scripts/history-purge-run.sh"
  },
  "lint-staged": {
    "*.js": [
      "node scripts/check-js-syntax.js --",
      "eslint --max-warnings 0 --fix"
    ]
  },
  "size-limit": [
    { "path": "backend/static/js/chat.js", "limit": "200 KB" },
    { "path": "backend/static/js/boot*.js", "limit": "50 KB" }
  ],
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@size-limit/file": "^10.0.0",
    "eslint": "^8.57.0",
    "fast-glob": "^3.3.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "size-limit": "^10.0.0",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/tests/js/**/*.test.js"],
    "rootDir": ".",
    "moduleFileExtensions": ["js", "json"],
    "modulePathIgnorePatterns": ["<rootDir>/BMAD-METHOD-v5"]
  }
}

API_PORT=8000
DB_URL=sqlite:///backend/cnes_cache.db
SCORING_FILE=config/scoring.yaml
CNES_CODES_FILE=config/cnes_codes.json
GEOCODER=nominatim
TRAVEL_TIME=off
MAPBOX_TOKEN=
GOOGLE_MAPS_KEY=
COUNTRY_BOUNDS=-34,5.5,-74.5,-32
SNAPSHOT=202512
RUN_TESTS=true
RUN_GEOCODE=true
GOLDEN_SET_FILE=data/golden/golden_set.json
ALLOW_ORIGINS=*
TZ=America/Sao_Paulo

# Email (verificação de conta e recuperação de senha)
# IMPORTANTE: Sem email configurado, novos usuários não conseguem fazer login (precisam verificar o email)
# Opção 1: Resend (3.000/mês grátis) - https://resend.com
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxx
# RESEND_FROM=Sophia <onboarding@resend.dev>
# NOTA: onboarding@resend.dev só envia para o email da sua conta Resend. Para enviar a qualquer usuário,
# verifique um domínio em resend.com/domains e use RESEND_FROM=Sophia <noreply@seudominio.com>
# Opção 2: Gmail (SMTP) - envia para qualquer email. Use Senha de App: https://myaccount.google.com/apppasswords
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_DEFAULT_SENDER=noreply@seudominio.com
# Base URL (links de verificação e recuperação de senha)
# BASE_URL=https://seudominio.com

# Reduzir lentidão do Cursor/terminal ao rodar python start.py
# LOG_CONSOLE=0          → logs só em arquivo (logs/error_debug.log), nada no terminal
# REQUEST_DEBUG=0        → não loga cada requisição no console (deixe 1 só para debug)
# LOG_LEVEL=WARNING      → menos linhas de log (INFO é o padrão)

# Cache de estáticos (segundos). Dev: 60–300; prod: 3600 ou 31536000. 0 = no-store
# STATIC_CACHE_MAX_AGE=60

# CNES overrides: lazy = só na 1ª busca por hospital; background = thread após o site abrir
# OVERRIDES_BOOT=lazy
# OVERRIDES_BOOT=background

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GET /v1/health e GET /v1/version",
  "description": "Healthcheck e versão da API",
  "oneOf": [
    {
      "title": "health",
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "degraded", "error"] },
        "message": { "type": ["string", "null"] },
        "checks": {
          "type": "object",
          "properties": {
            "database": { "type": "string" },
            "geocoder": { "type": "string" }
          }
        }
      }
    },
    {
      "title": "version",
      "type": "object",
      "required": ["version", "api_name"],
      "properties": {
        "version": { "type": "string" },
        "api_name": { "type": "string" },
        "data_version": { "type": ["string", "null"] }
      }
    }
  ],
  "examples": [
    { "status": "ok", "message": null },
    { "version": "1.0.0", "api_name": "API Emergência Obstétrica", "data_version": "2025-02" }
  ]
}

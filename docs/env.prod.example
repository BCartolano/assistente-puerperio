# .env.prod (exemplo) — copie para .env ou aponte env_file no compose
APP_PORT=5000
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
LOG_LEVEL=info

# CORS: em produção troque * pelo seu domínio
ALLOW_ORIGINS=*
COUNTRY_BOUNDS=-34,5.5,-74.5,-32
SCORING_FILE=config/scoring.yaml
CNES_CODES_FILE=config/cnes_codes.json

# Chaves (se usar IA)
GROQ_API_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=

# HTTPS (Nginx+Certbot)
DOMAINS=seudominio.com,www.seudominio.com
CERTBOT_EMAIL=seuemail@dominio.com

# Traefik (HTTPS automático)
DOMAIN_PRIMARY=seudominio.com
CERTBOT_EMAIL=seuemail@dominio.com
ALLOW_ORIGINS=https://seudominio.com,https://www.seudominio.com
